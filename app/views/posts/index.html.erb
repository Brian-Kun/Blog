<% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <h3><%= post.title %></h3>
        <p><%= truncate(post.body, :length => 200) %></p>
        <small>by <cite title="Source Title"><%= post.user.email %></cite> <%= post.created_at.strftime('%c')%></small>
        <br>
        <br>
        <%= link_to "Read More", post, :class => "btn btn-default" %>
      </div>
    </div>
    <br>
<% end %>
