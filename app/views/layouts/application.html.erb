<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Brian's Blog", root_path, :class => 'navbar-brand' %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <li class="active"><%= link_to "New Post", new_post_path %></li>
          <% if user_signed_in?%>
              <li><%= link_to "Log Out",  destroy_user_session_path, method: :delete, :class => 'btn btn-danger'%></li>
          <% else %>
              <li> <%= link_to "Sign In", new_user_session_path, :class => 'btn btn-primary' %></li>
          <% end %>
        </ul>
      </div>
    </nav>


    <div class="container">
      <span class="notice"><%= notice %></span>
      <span class="alert"><%= alert %></span>
      <%= yield %>
    </div>


  </body>
</html>
